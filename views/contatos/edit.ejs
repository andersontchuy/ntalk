<% include ../header %>
<div class="container">
	<header>
		<h1 class="display-4">Ntalk</h1>
		<h4>Editar contato</h4>
	</header>
	<section>
		<form action="/contato/<%- id %>" method="post">
			<input type="hidden" name="_method" value="PUT">
			<div class="form-group">
				<label for="nome">Nome:</label>
				<input id="nome" type="text" name="contato[nome]" value="<%- contato.nome %>" 
					class="form-control">
			</div>
			<div class="form-group">
				<label for="email">E-mail:</label>
				<input id="email" type="text" name="contato[email]" value="<%- contato.email %>" 
					class="form-control">
			</div>
			<div class="form-group"><button type="submit" class="btn btn-success">Atualizar</button></div>
		</form>
	</section>
	<% include ../exit %>
</div>
<% include ../footer %>